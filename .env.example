# MCP DeepWiki Server Configuration

# GitHub Integration (Required for Search Functionality)
# Get your token from: https://github.com/settings/tokens
# Scopes needed: public_repo (for public repositories)
GITHUB_TOKEN=your_github_personal_access_token_here

# GitHub API Configuration
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_USER_AGENT=MCP-DeepWiki-Server/1.0.0

# AI Service Configuration
# Configure at least one AI provider for summarization features

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=o4-mini-2025-04-16
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_BASE_URL=https://api.anthropic.com

# AI Service Settings
AI_DEFAULT_PROVIDER=anthropic
AI_FALLBACK_ENABLED=true

# Search Configuration
SEARCH_MAX_RESULTS=50
SEARCH_DEFAULT_SORT=stars
SEARCH_INCLUDE_FORKS=false
SEARCH_INCLUDE_ARCHIVED=false

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600000
CACHE_MAX_SIZE=100

# Rate Limiting Configuration
GITHUB_RATE_LIMIT_BUFFER=10
GITHUB_RETRY_DELAY=1000
GITHUB_MAX_RETRIES=3

# Timeout Configuration (Claude Desktop Optimized)
MCP_TIMEOUT=45000
REQUEST_TIMEOUT=30000
GITHUB_REQUEST_TIMEOUT=15000

# Logging Configuration
LOG_LEVEL=info
LOG_CORRELATION=true
LOG_METRICS=true

# Server Configuration
PORT=4000

# DeepWiki Configuration
DEEPWIKI_BASE_URL=https://deepwiki.com
DEEPWIKI_USER_AGENT=MCP-DeepWiki-Server/1.0.0 (Claude Desktop Compatible)
